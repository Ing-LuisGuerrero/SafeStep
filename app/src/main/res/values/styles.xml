<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MaterialComponents.Button.BigButton" parent="Widget.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.BigButton.Primary" parent="Widget.MaterialComponents.Button.BigButton">
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="Widget.MaterialComponents.Button.BigButton.Secondary" parent="Widget.MaterialComponents.Button.BigButton">
        <item name="backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Normalize" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:letterSpacing">0.05</item>
        <item name="textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.MaterialAlertDialog.Primary" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
</resources>